# Maximun "allowed" day before reboot
$MAX_DAYS = 3

# Alert messages
$MESSAGE = "Il tuo PC non viene spento da pi√π di 3 giorni, ti preghiamo di riavviare la macchina in pausa pranzo o a fine giornata, grazie!"

# Get number of days of last boot
$BOOTDATE = (get-date) - (gcim Win32_OperatingSystem).LastBootUpTime
$DAY = $BOOTDATE.days

# Launch popup if needed
if($DAY -gt $MAX_DAYS) {
  [System.Windows.MessageBox]::Show("$MESSAGE")
}
